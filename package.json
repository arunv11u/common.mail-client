{
	"name": "@arunvaradharajalu/common.mail-client",
	"version": "1.0.1",
	"description": "This package has a mail client which uses nodemailer under the hood for sending emails.",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"files": [
		"build/**/*"
	],
	"scripts": {
		"clean": "rimraf build",
		"build": "npm run clean && tsc --project tsconfig.build.json",
		"test": "jest --watchAll --verbose --no-cache --detectOpenHandles --env=node --coverage"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"./test/setup.ts"
		],
		"roots": [
			"<rootDir>/test"
		],
		"clearMocks": true,
		"reporters": [
			"default",
			[
				"./node_modules/jest-html-reporter",
				{
					"pageTitle": "Mail Client Test Report"
				}
			]
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/arunv11u/common.mail-client.git"
	},
	"keywords": [
		"nodemailer-mail-client"
	],
	"author": "Arun Varadharajalu",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/arunv11u/common.mail-client/issues"
	},
	"homepage": "https://github.com/arunv11u/common.mail-client#readme",
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@types/jest": "^29.5.12",
		"@types/nconf": "^0.10.6",
		"@types/nodemailer": "^6.4.15",
		"jest-html-reporter": "^3.10.2",
		"nconf": "^0.12.1",
		"rimraf": "^5.0.7",
		"ts-jest": "^29.1.4"
	},
	"dependencies": {
		"@arunvaradharajalu/common.errors": "^1.1.0",
		"handlebars": "^4.7.8",
		"nodemailer": "^6.9.14"
	}
}
